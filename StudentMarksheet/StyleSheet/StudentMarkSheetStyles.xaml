<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:StudentMarksheet.Converters">


    <!--Images-->
    <BitmapImage x:Key="AppIcon" UriSource="pack://application:,,,/StyleSheet/Resources/app_icon.png" />
    <BitmapImage x:Key="FilterIcon" UriSource="pack://application:,,,/StyleSheet/Resources/search_strong_icon.png" />
    <BitmapImage x:Key="ClearFilterIcon" UriSource="pack://application:,,,/StyleSheet/Resources/clear_filter_icon.ico" />
    <BitmapImage x:Key="DisplayGridIcon" UriSource="pack://application:,,,/StyleSheet/Resources/display_grid_icon.png" />
    <BitmapImage x:Key="UploadCSVFileIcon" UriSource="pack://application:,,,/StyleSheet/Resources/uploadcsvfile_icon.png" />

    <!--Converters-->
    <converters:BoolToVisibilityConverter x:Key="BoolVisibilityConverter"/>
    <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
    <converters:BooltoBrushConverter x:Key="BoolBrushConverter"/>

    <!--Border-->
    <Style x:Key="GenericBorderStyle" TargetType="{x:Type Border}">
        <Style.Setters>
            <Setter Property="Background" Value="CadetBlue"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style.Setters>
    </Style>

    <Style x:Key="DataGridBorderStyle" TargetType="{x:Type Border}">
        <Style.Setters>
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="BorderBrush" Value="DarkGray"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style.Setters>
    </Style>

    <!--Button-->
    <Style x:Key="ListBtnStyle" TargetType="{x:Type Button}">
        <Style.Setters>
            <Setter Property="Background" Value="AliceBlue"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="40"/>
        </Style.Setters>
    </Style>

    <!--TextBlock-->
    <Style x:Key="RegistrationTextBlockStyle" TargetType="{x:Type TextBlock}">
        <Style.Setters>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="4"/>
        </Style.Setters>
    </Style>

    <!--TextBox-->
    <Style x:Key="RegistrationTextBoxStyle" TargetType="{x:Type TextBox}">
        <Style.Setters>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="4"/>
        </Style.Setters>
    </Style>

</ResourceDictionary>
